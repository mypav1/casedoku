extends ../layout

block content
    h1= title
    table.user_table
        tr
            th First Name
            th Last Name
            th Email
            th Username
            th Year of Birth
            th Owned Car
            th Delete
        if user_list && user_list.length > 0
            each user in user_list
                tr
                    td #{user.first_name}
                    td #{user.last_name}
                    td #{user.email}
                    td #{user.username}
                    td #{user.birthyear}
                    td #{user.userCar.carbrand} 
                    td.center
                        if(userid !== user.id)
                            a(href="/users/delete?id=#{user.id}")
                                img.icon(src="/images/trashcan.png")
                        
        else
            tr
                td(colspan=7) No records