extends ../layout

block content
  h1 Add User

  form.user_input(action='/users', method='post')
    label(for='first_name')
        span First Name
        input(type='text', name='first_name', id='first_name', required='true')
    label(for='last_name')
        span Last Name
        input(type='text', name='last_name', id='last_name', required='true')
    label(for='email')
        span Email
        input(type='email', name='email', id='email', required='true')
    label(for='username')
        span Username
        input(type='text', name='username', id='username', required='true')
    label(for='password')
        span Password
        input(type='password', name='password', id='password', required='true')
    label(for='birthyear')
        span Year of Birth
        br
        input(type='number', name='birthyear', id='birthyear', value='1950')
    label(for='userCar.carbrand')
        span Car
        br
        select.dropdown_window(type='text', name='userCar.carbrand', id='userCar.carbrand', required='true')
            each car in car_list
                option #{car.car_type} #{car.car_model} - #{car.color} - #{car.fuel} - #{car.transmition}
    label.control-lable(for='submit')
        span
        input(type='submit', id='submit', value='Save')