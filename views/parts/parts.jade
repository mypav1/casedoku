extends ../layout

block content
    h1 List of all parts
    table.car_table
        tr
            th Product Name
            th Product Description
            th Manufacturer Name
            th Manufacturer Contact
            th Manufacturer Nr
            th HQ Address
            th HQ City
        if part_list && part_list.length > 0
            each part in part_list
                tr
                    td #{part.prodName}
                    td #{part.prodDesc}
                    td #{part.manufacturer.manuName}
                    td #{part.manufacturer.manuContactPerson}
                    td #{part.manufacturer.manuContactNr}
                    td #{part.manufacturer.hqAddress}
                    td #{part.manufacturer.hqCity}
        else
            tr
                td(colspan=7) No records