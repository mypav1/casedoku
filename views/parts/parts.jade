extends ../layout

block content
    h1 List of all parts
    table.car_table
        tr
            th Product Name
            th Product Description
            th Price
            th Manufacturer Name
            th Manufacturer Contact
            th Manufacturer Nr
            th HQ Address
            th HQ City
            th In Stock
        if part_list && part_list.length > 0
            each part in part_list
                tr
                    td #{part.prodName}
                    td #{part.prodDesc}
                    td.center
                        form(action='/parts/updateprice?partid=#{part.id}', method='post')
                            label.input_box(for='price')
                            span
                            input(type='number', name='price', id='price', required='true', value='#{part.price}')
                            label(for='submit')
                            span
                            input(type='submit', id='submit', value='save')
                    td #{part.manufacturer.manuName}
                    td #{part.manufacturer.manuContactPerson}
                    td #{part.manufacturer.manuContactNr}
                    td #{part.manufacturer.hqAddress}
                    td #{part.manufacturer.hqCity}
                    td #{part.instock}
        else
            tr
                td(colspan=9) No records