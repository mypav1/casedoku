extends ../layout

block content
  h1 Add Order

  form.user_input(action='/orders', method='post')
    label(for='order_date')
        span Order Date
        input(type='text', name='order_date', id='order_date', required='true')
    label(for='reg_nr')
        span Registration Number
        input(type='text', name='reg_nr', id='reg_nr', required='true')
    label(for='customer_car')
        span Customer Car
        input(type='text', name='customer_car', id='customer_car', required='true')
    label(for='parts')
        span Parts
        input(type='text', name='parts', id='parts', required='true')
    label(for='shop')
        span Shop
        input(type='text', name='shop', id='shop', required='true')
    label(for='contact_person')
        span Contact Person
        input(type='text', name='contact_person', id='contact_person', required='true')
    label(for='hqCity')
        span Price
        input(type='text', name='price', id='price', required='true')
    label.control-lable(for='submit')
        span
        input(type='submit', id='submit', value='Save')